<% layout('layouts/boilerplate')%>
    <div id="yylamdiv"></div>
    <style>
        .card {
            background-color: transparent;
            border-radius: 2rem;
            border: none;
            transition-duration: 0.5s;
            margin: 12px 0;
        }

        .card:hover {
            background-color: rgb(245, 245, 245);
        }

        .card:active {
            background-color: #eee;
        }

        td {
            width: 17px;
        }

        td .icon-td {
            width: 100px;
        }

        .chat {
            color: rgb(151, 199, 226);
            padding: 3px 0 0 5px;
            border-radius: 30%;
            background-color: rgba(201, 228, 255, 0.3);
            width: 40px;

        }

        .heart {
            color: rgb(255, 183, 183);
            padding: 3px 0 0 5px;
            border-radius: 30%;
            background-color: rgba(252, 201, 201, 0.3);
            width: 40px;
            margin: 5px 10px;

        }
    </style>

<div id="left-bar">
    <div class="category-list">
